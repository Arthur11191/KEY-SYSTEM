<body>
  <div id="content" style="display:none;">
    <h1>✅ Acesso validado via cookie!</h1>
    <div class="msg">Copie a key abaixo</div>
    <h2>99 Noites</h2>
    <div class="key" id="keyText">X99noiteskeyX</div>
    <br/>
    <button onclick="copiarKey()">Copiar Key</button>
  </div>

  <div id="errorMsg" class="erro" style="display:none;">
    ❌ Você não veio do site Link-Hub ou Linkvertise.
  </div>

  <script>
    const referersPermitidos = [
      "rekonise.com",
      "linkvertise.com",
      "link-target.net"
    ];

    const referer = document.referrer.toLowerCase();
    const content = document.getElementById("content");
    const errorMsg = document.getElementById("errorMsg");

    const veioDeLinkPermitido = referersPermitidos.some(link => referer.includes(link));

    if (veioDeLinkPermitido) {
      content.style.display = "block";
    } else {
      errorMsg.style.display = "block";
    }

    function copiarKey() {
      const key = document.getElementById("keyText").textContent;
      navigator.clipboard.writeText(key).then(() => {
        alert("✅ Key copiada com sucesso!");
      });
    }
  </script>
